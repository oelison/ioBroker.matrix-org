{
  "name": "iobroker.matrix-org",
  "version": "1.0.0",
  "description": "Adapter for pushing matrix messages into a room",
  "author": {
    "name": "Christian Oelschlegel",
    "email": "iobrokermatrix@sciphy.de"
  },
  "homepage": "https://github.com/oelison/ioBroker.matrix-org",
  "license": "MIT",
  "keywords": [
    "push",
    "message",
    "matrix"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/oelison/ioBroker.matrix-org"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^2.6.8",
    "matrix-js-sdk": "^25.0.0"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.5.9",
    "@alcalzone/release-script-plugin-iobroker": "^3.5.9",
    "@alcalzone/release-script-plugin-license": "^3.5.9",
    "@alcalzone/release-script-plugin-manual-review": "^3.5.9",
    "@iobroker/adapter-dev": "^1.2.0",
    "@iobroker/adapter-react": "2.2.4",
    "@iobroker/testing": "^4.1.0",
    "@material-ui/core": "^4.12.4",
    "@types/chai": "^4.3.4",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.11",
    "@types/proxyquire": "^1.3.28",
    "@types/react": "^17.0.47",
    "@types/react-dom": "^17.0.17",
    "@types/sinon": "^10.0.13",
    "@types/sinon-chai": "^3.2.9",
    "assertthat": "^6.5.2",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.37.0",
    "eslint-plugin-react": "^7.32.2",
    "mocha": "^10.2.0",
    "proxyquire": "^2.1.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "sinon": "^15.0.1",
    "sinon-chai": "^3.7.0",
    "typescript": "~5.0.3"
  },
  "main": "main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*).json",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "admin/build/",
    "lib/",
    "www/",
    "io-package.json",
    "LICENSE",
    "main.js"
  ],
  "scripts": {
    "test:js": "mocha --ui tdd --bail --async-only --config test/mocharc.custom.json \"{!(node_modules|test)/**/*.test.js,*.test.js,test/**/*.test!(PackageFiles|Startup).js}\"",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:js && npm run test:package",
    "check": "tsc --noEmit -p tsconfig.check.json",
    "lint": "eslint --ext .js,.jsx",
    "translate": "translate-adapter",
    "release": "release-script"
  },
  "bugs": {
    "url": "https://github.com/oelison/ioBroker.matrix-org/issues"
  },
  "readmeFilename": "README.md"
}
